<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/orderNameConfirmationDashboard"
        android:text="Item 1"
        android:layout_margin="8dp"
        android:textSize="15sp"
        android:layout_gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderQuantityConfirmationDashBoard"
        android:text="Quantity"
        android:layout_margin="8dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/orderNameConfirmationDashboard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/orderPriceConfirmationDashboard"
        android:layout_marginRight="30dp"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/orderPriceConfirmationDashboard"
        android:text="Price"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="viewEnd"/>

</androidx.constraintlayout.widget.ConstraintLayout>