<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    android:padding="20dp"
    android:orientation="vertical"
    android:minWidth="500dp">

    <ListView
        android:id="@+id/order_details_deliverypartner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/order_list_background"
        android:divider="#008577"
        android:dividerHeight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_back"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Amount to Collect:"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#8cb8b7"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/total_DeliveryParter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Rs xxxx"
            android:textColor="@color/colorInput"
            android:textSize="27sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cust_name_DeliveryPartner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="cust_name"
            android:textColor="@color/colorInput"
            android:textSize="19sp"
            />

        <TextView
            android:id="@+id/cust_phone_DeliveryPartner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:text="cust_phone"
            android:textSize="19sp"
            android:textColor="@color/colorInput"
            />

        <TextView
            android:id="@+id/cust_otp_DeliveryPartner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:text="otp"
            android:textSize="19sp"
            android:textColor="@color/colorInput"
             />

        <TextView
            android:id="@+id/cust_add_DeliveryPartner"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:text="cust_add"
            android:textColor="@color/colorInput"
            android:textSize="19sp"
            />

        <Button
            android:id="@+id/navigateDelivery"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/order_list_background"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:drawableTop="@drawable/ic_map_white_24dp"
            android:padding="10dp"
            android:text="Navigate"
            android:textColor="#006b39"
             />

    </RelativeLayout>

    <Button
        android:id="@+id/pickup_DeliveryPartner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton_back"
        android:layout_marginTop="15dp"
        android:text="Order Collected"
        android:textColor="@color/colorInput"
        app:layout_constraintTop_toBottomOf="@+id/total_DeliveryParter" />

    <Button
        android:id="@+id/deliverdone_DeliveryPartner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/deliver_back"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Delivered"
        android:textColor="@color/colorInput"
        app:layout_constraintTop_toBottomOf="@+id/total_DeliveryParter" />

</LinearLayout>